---
layout: null
---
[
  {% for post in site.posts %}
    {
      "title"    : "{{ post.title | escape }}",
      "url"      : "{{ site.baseurl }}{{ post.url }}",
      "date"     : "{{ post.date | date: "%Y-%m-%d" }}",
      "tags"     : "{{ post.tags | join: ', ' }}",
      "content"  : "{{ post.content | strip_html | strip_newlines | escape | truncate: 200 }}"
    } {% unless forloop.last %},{% endunless %}
  {% endfor %}
]